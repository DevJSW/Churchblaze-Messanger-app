<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/post_image"
                    android:layout_margin="10dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#fff"
                    android:src="@drawable/placeholder_image"/>

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:id="@+id/post_connected"
                android:paddingTop="35dp"
                android:paddingLeft="35dp"
                android:paddingBottom="4dp"
                android:paddingRight="4dp"
                android:layout_alignBottom="@id/post_image"
                android:layout_alignLeft="@id/post_image"
                android:layout_alignTop="@id/post_image"
                android:layout_alignRight="@id/post_image"
                android:scaleType="fitXY"
                android:src="@drawable/ic_connected"
                android:adjustViewBounds="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subscribeBtn"
            android:layout_toRightOf="@+id/post_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/post_name"
                android:textSize="14dp"
                android:scaleType="fitXY"
                android:textStyle="bold"
                android:text="username"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:id="@+id/status"
                android:text="Status"/>


        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9b9999"/>

</LinearLayout>

